# COPY THIS FILE TO .env AND UPDATE WITH YOUR ACTUAL VALUES
# DO NOT commit .env to git (it's in .gitignore)

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Using asyncpg driver for async PostgreSQL support
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:123qwe@localhost:5432/atbnet

# Schema for IdioRAG tables (keeps them separate from other application tables)
DATABASE_SCHEMA=idiorag

# Connection pooling
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# LLM CONFIGURATION - QWEN3-14B
# ============================================================================
LLM_API_URL=https://yyc-130-250-171-122.cloud.denvrdata.com/v1
LLM_MODEL_NAME=qwen3-14b

# IMPORTANT: Replace with your actual LLM API token
LLM_API_KEY=PUT_YOUR_LLM_TOKEN_HERE

# LLM parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# IMPORTANT: Replace with your actual secret key from your application
JWT_SECRET_KEY=PUT_YOUR_APPLICATION_SECRET_KEY_HERE

# Algorithm (HS256 for symmetric encryption)
JWT_ALGORITHM=HS256

# Note: If you switch to RS256 in the future, uncomment and use:
# JWT_ALGORITHM=RS256
# JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
# your-public-key-here
# -----END PUBLIC KEY-----

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=IdioRAG
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Comma-separated list of allowed origins for CORS
# For development, allowing localhost on common ports
CORS_ORIGINS=["http://localhost:3000","http://localhost:4200","http://localhost:8080"]

# ============================================================================
# EMBEDDING CONFIGURATION
# ============================================================================
# HuggingFace model for text embeddings
# Default: BAAI/bge-small-en-v1.5 (384 dimensions, good balance of quality/speed)
# Alternatives:
#   - BAAI/bge-base-en-v1.5 (768 dimensions, better quality, slower)
#   - sentence-transformers/all-MiniLM-L6-v2 (384 dimensions, faster)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# ============================================================================
# CHUNKING CONFIGURATION
# ============================================================================
# How to split documents into chunks for embedding
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ============================================================================
# API LIMITS
# ============================================================================
MAX_UPLOAD_SIZE_MB=10

